{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"arrowParens": "always",
				"trailingComma": "es5",
				"semi": true,
				"useTabs": true,
				"printWidth": 80,
				"quoteProps": "as-needed",
				"endOfLine": "auto",
				"bracketSpacing": true
			}
		]
	}
}
